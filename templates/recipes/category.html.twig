{% extends 'base.html.twig' %}

{% block title %}Les recettes{% endblock %}

{% block body %}

<div class="slide container-fluid" id="recipes">
   
    
    <div class="container my-3">
    <h1 class="orange">Carnet de recettes</h1>
        <a href="{{path('home')}}"><button class="btn btn-warning m-3">
            <i class="fa-solid fa-arrow-left"></i> Retour à l'accueil</button>
        </a>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card categories p-4">
            <p>Filtrer les recettes :</p>
            <div class="row justify-content-md-around">
                <a href="{{path('recettes_category',{'category':'café'})}}" class="drink btn btn-warning col-md-2 mt-2">
                    <span class="drinkIcon mdi mdi-coffee"></span><br>Les cafés
                </a>
                <a href="{{path('recettes_category',{'category':'thé'})}}" class="drink btn btn-warning col-md-2 mt-2">
                    <span class="drinkIcon mdi mdi-tea"></span><br>Les thés
                </a>
                <a href="{{path('recettes_category',{'category':'limonade'})}}" class="drink btn btn-warning col-md-2 mt-2">
                     <i class="drinkIcon fa-solid fa-whiskey-glass"></i><br>Les limonades
                </a>
                <a href="{{path('recettes_category',{'category':'mocktail'})}}" class="drink btn btn-warning col-md-2 mt-2">
                   <i class="drinkIcon fa-solid fa-martini-glass-citrus"></i><br>Les mocktails
                </a>
                <a href="{{path('recettes_category',{'category':'cocktail'})}}" class="drink btn btn-warning col-md-2 mt-2">
                    <i class="drinkIcon fa-solid fa-martini-glass"></i><br>Les cocktails
                </a>
                
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="orange">Toutes les recettes </h2>
        <div class="row d-flex justify-content-md-around">
            {% for recipe in recettes %}
                 {% include "recipes/_recipeCardNote.html.twig" %}
            {% endfor %}
            
            
        </div>
         
       
        
    </div>
    

</div>

{% endblock %}
