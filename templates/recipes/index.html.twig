{% extends 'base.html.twig' %}

{% block title %}Les recettes{% endblock %}

{% block body %}

<div class="slide container-fluid" id="recipes">
   
    
    <div class="container my-3">
    <h1 class="orange">Carnet de recettes</h1>
        <a href="{{path('home')}}"><button class="btn btn-warning m-3">
            <i class="fa-solid fa-arrow-left"></i> Retour à l'accueil</button>
        </a>

        <div class="card categories p-4">
            <p>Filtrer les recettes :</p>
            <div class="row justify-content-md-around">
                <div class="drink btn col-md-2">
                    <span class="drinkIcon mdi mdi-coffee"></span>
                    <p><a href="" class="link-warning">Les cafés</a></p>
                </div>
                <div class="drink btn col-md-2">
                    <span class="drinkIcon mdi mdi-tea"></span>
                    <p><a href="" class="link-warning">Les thés</a></p>
                </div>
                <div class="drink btn col-md-2">
                    <i class="drinkIcon fa-solid fa-whiskey-glass"></i>
                    <p><a href="" class="link-warning">Les limonades</a></p>
                </div>
                <div class="drink btn col-md-2">
                    <i class="drinkIcon fa-solid fa-martini-glass-citrus"></i>
                    <p><a href="" class="link-warning">Les moktails</a></p>
                </div>
                <div class="drink btn col-md-2">
                    <i class="drinkIcon fa-solid fa-martini-glass"></i>
                    <p><a href="" class="link-warning">Les coktails</a></p>
                </div> 
            </div>
        </div>
    </div>

    <div class="container">
        <h2 class="orange">Toutes les recettes </h2>
        <div class="row d-flex justify-content-md-around">
            {% for recipe in recipes %}
                <div class="col-md-4 card mt-3">
                    <div class="like"><i class="fa-regular fa-heart"></i></div>
                    <img src="../uploads/{{recipe.image}}" class="card-img-top mt-3 img-fluid" alt="">
                    <div class="card-body">
                        <div class="category">{{recipe.category}}</div>
                        <div class="card-title"><b>{{recipe.title}}</b></div>
                        <div class="card-text">{{recipe.note}}</div>
                        <div class="card-text">
                            <p>{{recipe.time}} min</p>
                            <p>{{recipe.level}}</p>
                            <p>{{recipe.budget}}</p>
                        </div>
                        <a href="{{path('show_recipe', {"slug": recipe.slug})}}" class="btn btn-warning"><i class="fa-sharp fa-solid fa-eye"></i> Voir la recette</a>
                    </div>
                </div>
            {% endfor %}
            
            
        </div>
       
        
    </div>
    

</div>

{% endblock %}
